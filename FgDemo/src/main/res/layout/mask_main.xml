<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".MaskdataActivity">

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4" />

        <Button
            android:id="@+id/b001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/b001"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear01"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time" />
    </LinearLayout>

    <TableRow
        android:id="@+id/table001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear02"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/t_t001"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/t001"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/t_t002"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/t002"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/t_t003"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/t003"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/t_t004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/t004"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/t_t005"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/t005"
            android:textSize="12sp" />
    </TableRow>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table001"
        android:layout_marginTop="0dp" />

</RelativeLayout>
